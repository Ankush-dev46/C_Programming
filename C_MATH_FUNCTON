#include <stdio.h>
#include <math.h>
#include <stdlib.h>

int main() {
    // MATH_FUNCTION
    float num = 2.8;

    printf("Original number: %.2f\n\n", num);

    float c = ceil(num);
    printf("Ceil (round up) of %.2f = %.0f\n", num, c);

    float f = floor(num);
    printf("Floor (round down) of %.2f = %.0f\n", num, f);

    float r = round(num);
    printf("Round (nearest integer) of %.2f = %.0f\n", num, r);

    float s = sqrt(num);
    printf("Square root of %.2f = %.2f\n", num, s);

    float p = pow(num, 3); // numÂ³
    printf("%.2f raised to power 3 = %.2f\n", num, p);

    float q = fabs(num); // absolute value
    printf("Absolute value of %.2f = %.2f\n", num, q);

    float lg = log(num); // natural log (base e)
    printf("Natural logarithm (ln) of %.2f = %.4f\n", num, lg);

    float sn = sin(num);
    printf("Sine of %.2f radians = %.4f\n", num, sn);

    float cs = cos(num);
    printf("Cosine of %.2f radians = %.4f\n", num, cs);

    float tn = tan(num);
    printf("Tangent of %.2f radians = %.4f\n", num, tn);

    return 0;
}
